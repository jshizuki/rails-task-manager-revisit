<div class='container mt-3'>
  <div class='card border-secondary' style='max-width: 50rem'>
    <h1 class='card-header'>My task manager</h1>
    <div class='card-body pb-0'>
      <ul class='list-unstyled'>
        <% @tasks.each do |task| %>
          <li>
            <p class='fs-4'>
              <% if task.completed %>
                <i class="fa-sharp fa-regular fa-circle-check"></i>
              <% else %>
                <i class="fa-sharp fa-regular fa-circle"></i>
              <% end %>
              <%= link_to task.title, task_path(task), class: 'text-decoration-none link-secondary' %>
              <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'text-secondary' do %>
                <i class="fa-regular fa-trash-can"></i>
              <% end %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
  <p class='mt-3 fs-4'><%= link_to 'Add a new task', new_task_path, class: 'text-decoration-none' %></p>
</div>
