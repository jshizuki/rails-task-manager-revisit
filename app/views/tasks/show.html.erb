<div class="container mt-3">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p><%= @task.completed ? "This task is completed" : "This task hasn't been completed" %></p>
  <p><%= link_to 'Back to lists', tasks_path %></p>
  <p><%= link_to 'Update task', edit_task_path %></p>
  <p><%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
</div>
