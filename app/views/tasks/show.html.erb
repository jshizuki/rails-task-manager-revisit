<div class='container mt-3'>
  <div class='card border-secondary' style='max-width: 50rem'>
    <h1 class='card-header'><%= @task.title %></h1>
    <div class='card-body text-secondary'>
      <h3 class='card-title'><%= @task.details %></h3>
      <p class='card-text'><%= @task.completed ? "This task is completed" : "This task hasn't been completed" %></p>
    </div>
  </div>
  <hr>
  <div class='mt-3 fs-4'>
    <p><%= link_to 'Back to lists', tasks_path, class: 'text-decoration-none' %></p>
    <p><%= link_to 'Update task', edit_task_path, class: 'text-decoration-none' %></p>
    <p><%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'text-decoration-none' %></p>
  </div>
</div>
