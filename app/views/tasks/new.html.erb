<div class="container mt-3">
  <h1>New Task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control form-control-lg mb-3'%>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control form-control-lg mb-3' %>
    <%= f.submit class: 'btn btn-success btn-large' %>
  <% end %>
</div>
